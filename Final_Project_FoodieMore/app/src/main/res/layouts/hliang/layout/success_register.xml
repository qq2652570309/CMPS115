<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sign_up_successful"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food_5">

    <ImageView
        android:id="@+id/sr_check_icon"
        android:src="@drawable/check_icon_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="76dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/sr_thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to FoodieMore!"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/sr_check_icon"
        android:layout_centerHorizontal="true" />
</RelativeLayout>