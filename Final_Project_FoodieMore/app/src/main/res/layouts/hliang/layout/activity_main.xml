<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_foodie_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/food_5"
    tools:context="com.example.harlan.myapplication.MainActivity">>

    <!--Input user name-->
    <EditText
        android:id="@+id/edit_username"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:lines="1"
        android:hint="Email"
        android:textColorHint="#FDFEFE"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--Input password-->
    <EditText
        android:id="@+id/edit_password"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:lines="1"
        android:hint="Password"
        android:password="true"
        android:maxLength="6"
        android:textColorHint="#FDFEFE"
        android:layout_below="@+id/edit_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--Login Button-->
    <Button
        android:id="@+id/login_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="login"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textColor="#FDFEFE"
        android:layout_marginTop="27dp"
        android:background="@drawable/shape"
        android:layout_below="@+id/edit_password"
        android:layout_alignLeft="@+id/sign_up_button"
        android:layout_alignStart="@+id/sign_up_button"
        android:layout_alignRight="@+id/sign_up_button"
        android:layout_alignEnd="@+id/sign_up_button"
        android:inputType="textEmailAddress"/>

    <!--Sign up Button-->
    <Button
        android:id="@+id/sign_up_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="sign up"
        android:textSize="20sp"
        android:textColor="#FDFEFE"
        android:textAllCaps="true"
        android:background="@drawable/shape"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/login_button"
        android:onClick="onClick"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>







