<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/merchantButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Merchant"
        android:onClick="onClickMerchant"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"
        android:layout_alignBaseline="@+id/consumerButton"
        android:layout_alignBottom="@+id/consumerButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/consumerButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Consumer"
        android:onClick="onClickConsumer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="228dp" />
</RelativeLayout>