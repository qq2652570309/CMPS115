<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food_5"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/csupa_relative"
        android:layout_width="250dp"
        android:layout_height="430dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.68"
        android:background="#F2F3F4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/edit_street"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:lines="1"
            android:hint="Street name"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/edit_apt"
            android:layout_alignStart="@+id/edit_apt"
            android:layout_marginTop="64dp" />

        <EditText
            android:id="@+id/edit_apt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:lines="1"
            android:hint="Apartment"
            android:gravity="center"
            android:layout_below="@+id/edit_street"
            android:layout_alignLeft="@+id/edit_phone"
            android:layout_alignStart="@+id/edit_phone"
            android:layout_marginTop="58dp" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:lines="1"
            android:hint="Phone"
            android:maxLength="10"
            android:gravity="center"
            android:layout_below="@+id/edit_apt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="58dp" />
        />

        <Button
            android:id="@+id/edit_save"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Save"
            android:textSize="20sp"
            android:background="#13ADF5"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/edit_phone"
            android:layout_alignStart="@+id/edit_phone" />

    </RelativeLayout>

</RelativeLayout>