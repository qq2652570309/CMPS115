<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_foodie_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/sea_1"
    android:scaleType="fitXY"
    tools:context="com.example.foodiemore.foodiemore.InitialPage">

    <ImageView
        android:id="@+id/busImage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/delivery"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--Input user name-->
    <EditText
        android:id="@+id/edit_username"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:lines="1"
        android:hint="@string/hint_email"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="213dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--Input password-->
    <EditText
        android:id="@+id/edit_password"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:lines="1"
        android:hint="@string/hint_pwd"
        android:inputType="numberPassword"
        android:password="true"
        android:maxLength="6"
        android:textColorHint="#FFFFFF"
        android:layout_below="@+id/edit_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--Login Button-->
    <Button
        android:id="@+id/login_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/LOGIN"
        android:textSize="20sp"
        android:textColor="#FDFEFE"
        android:layout_marginTop="27dp"
        android:background="@drawable/shape"
        android:layout_below="@+id/edit_password"
        android:layout_alignLeft="@+id/sign_up_button"
        android:layout_alignStart="@+id/sign_up_button"
        android:layout_alignRight="@+id/sign_up_button"
        android:layout_alignEnd="@+id/sign_up_button"
        android:inputType="textEmailAddress"/>

    <!--Sign up Button-->
    <Button
        android:id="@+id/sign_up_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/SIGN_UP"
        android:textSize="20sp"
        android:textColor="#FDFEFE"
        android:textAllCaps="true"
        android:background="@drawable/shape"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/login_button"
        android:onClick="onClick"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/loadPart"
        android:text="Loading...."
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>







